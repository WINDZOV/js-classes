export class Reloj {
  constructor(elementId) {
    this.elemento = document.getElementById(elementId);
    this.actualizarHora();
    this.intervalo = setInterval(() => this.actualizarHora(), 1000);
  }

  actualizarHora() {
    const ahora = new Date();
    const horas = ahora.getHours().toString().padStart(2, "0");
    const minutos = ahora.getMinutes().toString().padStart(2, "0");
    const segundos = ahora.getSeconds().toString().padStart(2, "0");

    const horaActual = `üïí ${horas}:${minutos}:${segundos}`;
    console.log(horaActual); // –í—Å—ë –µ—â—ë –≤ –∫–æ–Ω—Å–æ–ª–∏ 
    if (this.elemento) {
      this.elemento.textContent = horaActual; // –ê —Ç–µ–ø–µ—Ä—å –∏ –Ω–∞ —Å—Ç—Ä–∞–Ω–∏—Ü–µ!
    }
  }
}
